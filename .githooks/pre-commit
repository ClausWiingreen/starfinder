#!/bin/bash

echo "ğŸ” Running pre-commit checks..."

if git stash --keep-index; then
  trap exit git stash pop
fi

function fail() {
      echo -e "${RED}âŒ $1${NC}"
      exit 1
}

echo "ğŸ§¼ Checking code formatting with Spotless..."
./mvnw spotless:check
if [ $? -ne 0 ]; then
  fail "Spotless check failed. Please format your code with 'mvn spotless:apply'."
fi

echo "ğŸ”§ Validating Maven project..."
./mvnw validate -q
if [ $? -ne 0 ]; then
  fail "Maven validation failed."
fi

echo "ğŸ§ª Running unit tests..."
./mvnw test -q
if [ $? -ne 0 ]; then
  fail "Some unit tests failed."
fi

echo "âœ… All pre-commit checks passed."
